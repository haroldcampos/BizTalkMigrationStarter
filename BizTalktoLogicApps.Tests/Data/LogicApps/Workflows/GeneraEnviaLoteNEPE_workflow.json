              "Si_es_reenvio_ceros_9a52008a": {
                "type": "If",
                "expression": "@or(variables('reenvioCeros'), equals(variables('recepcionArchivos')?['Procesos'], 'ComplementoNepeCeros'))",
                "actions": {
                  "Se_arma_documento_XML_40e11142": {
                    "type": "Compose",
                    "inputs": "@variables('generadorLotesDominio')?['PrepararXMLLoteCeros(recepcionArchivos']?['FechaContingenciaCeros, procesoExterno']?['IdProcesoPago)']",
                    "runAfter": {}
