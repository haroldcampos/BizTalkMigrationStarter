              },
              "Archivos_Seccionados_2d5b4db8": {
                "type": "Compose",
                "inputs": "@'if(recepcionArchivos.TipoProceso == Sat.Scade.Pagos.Modelo.Comun.TipoProceso.Ceros){\r\n    numeroPaginas = generadorLotesDominio.ObtenerDatosPaginacionCeros(recepcionArchivos.FechaContingenciaCeros, procesoExterno, reenvioCeros);\r\n}else{\r\n    numeroPaginas = generadorLotesDominio.ObtenerDatosPaginacionPagos(recepcionArchivos.IdProceso, procesoExterno.IdProcesoExterno);\r\n}'",
                "runAfter": {
                  "Si_es_reenvio_ceros_9a52008a": [
                    "SUCCEEDED"
                  ]
                }
              },
              "Si_hay_páginas_73586d44": {
                "type": "If",
                "expression": "@greater(variables('numeroPaginas'), 0)",
                "actions": {
                  "Until_298809ee": {
                    "type": "Until",
                    "expression": "@greater(variables('cuentaArchivoOperaciones'), variables('numeroPaginas'))",
                    "limit": {
                      "count": 60,
                      "timeout": "PT1H"
                    },
                    "actions": {
                      "StartOrchestration_1": {
                        "type": "Workflow",
                        "inputs": {
