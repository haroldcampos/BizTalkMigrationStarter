            "runAfter": {}
          },
          "El_archivo_ya_fue_generado_0702e421": {
            "type": "If",
            "expression": "@'//Se tiene que realizar un stored procedure que indique si el archivo ya fue generado con el idproceso externo correcto\r\n\r\nprocesoExterno.EstadoProcesoExterno == Sat.Scade.Pagos.Modelo.Comun.EstatusProcesosExternos.Pendiente || \r\nprocesoExterno.EstadoProcesoExterno == Sat.Scade.Pagos.Modelo.Comun.EstatusProcesosExternos.Rechazado'",
