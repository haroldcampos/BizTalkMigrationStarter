                "type": "Until",
                "expression": "@lessOrEquals(variables('reintentos'), variables('cuentaEnvios'))",
                "limit": {
                  "count": 60,
                  "timeout": "PT1H"
                },
                "actions": {
                  "Envía_Archivo": {
                    "type": "Compose",
                    "inputs": "@'System.Diagnostics.EventLog.WriteEntry(\"Pagos\",\"Envío archivo TESOFE\");\r\n    procesoExterno.EstadoProcesoExterno = Sat.Scade.Pagos.Modelo.Comun.EstatusProcesosExternos.Enviado;\r\n    procesoExternoDominio.ActualizarEstado(procesoExterno);\r\nresultadoEnvioArchivosNepe = loteNepeDominio.EnviarArchivosNepe(loteNepeResponse);\r\nif (!resultadoEnvioArchivosNepe)\r\n{\r\n\r\n    procesoExterno.EstadoProcesoExterno = Sat.Scade.Pagos.Modelo.Comun.EstatusProcesosExternos.ErrorPlataforma;\r\n    procesoExternoDominio.ActualizarEstado(procesoExterno);\r\n   cuentaEnvios = cuentaEnvios + 1;\r\n}\r\nelse\r\n{\r\n    cuentaEnvios = reintentos;\r\n}'",
                    "runAfter": {}
                  }
                },
                "runAfter": {
                  "Recupera_reintentos_965a803d": [
                    "SUCCEEDED"
                  ]
                }
              }
            },
            "else": {
              "actions": {}
            },
            "runAfter": {
              "El_archivo_ya_fue_generado_0702e421": [
                "SUCCEEDED"
              ]
            }
